<header>
    <%= render 'layouts/navigation' %>
</header>

<div class="container">
<center>
<h1>Cart</h1>
<% if @cart_items.empty? %>
  <h4 style="margin-top:3em">Your Cart is Empty</h4>
<% else %>
<table class="table table-hover" style="margin-top: 4em;width: 60rem;">
  <thead>
    <tr>
      <th scope="col">Product Name</th>
      <th scope="col">Quantity</th>
      <th scope="col">Unit Price</th>
      <th scope="col">Total Price</th>
    </tr>
  </thead>
  <tbody>
    <% @cart_items.each do |cart|%>
    <tr>
        
      <td><%= cart.product.name %></td>     
      <td><%= cart.quantity %></td>
      <td><%= cart.product.price %></td>
      <td><%= cart.total_price %></td>
    </tr>
    <% end %>
    <tr>
      <td colspan="3">Total: </td>
      <td><%= @cart_items.map(&:total_price).sum %></td>
    </tr> 
  </tbody>
</table>

<%= link_to "Edit Cart", edit_cart_path, class: "btn btn-outline-success" %>
<%= link_to "Checkout", new_checkout_path, class: "btn btn-outline-success" %> 
<% end %>
</center>
</div>
