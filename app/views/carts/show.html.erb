<header>
    <%= render 'layouts/navigation' %>
</header>

<div class="container">
<center>
<h1>Cart</h1>
<table class="table table-hover" style="margin-top: 4em;width: 60rem;">
  <thead>
    <tr>
      <th scope="col">Product Name</th>
      <th scope="col">Quantity</th>
      <th scope="col">Unit Price</th>
      <th scope="col">Total Price</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    <% @cart_items.each do |cart|%>
    <tr>
        
      <td><%= cart.product.name %></td>     
      <td><%= cart.quantity %></td>
      <td><%= cart.product.price %></td>
      <td><%= cart.total_price %></td>
      <td><%= link_to "Edit Cart", edit_cart_path(cart), class: "btn btn-outline-success" %></td>
    </tr>
    <% end %>
  </tbody>
</table>


<%= link_to 'Checkout', '/orders' ,method: :post, class: "btn btn-outline-success" %>
</center>
</div>

